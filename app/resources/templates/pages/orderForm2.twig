            {% endfor %}

            <input type="hidden" name="moduleAction2" value="moduleAction2" class ="moduleAction2">
            <select name="selectedItem">
                <option value = '0' {% if selectedItem is defined %} selected {% endif %}>Maak een keuze</option>
                <option value = 'ijs' {% if selectedItem == ijs %} selected {% endif %}>ijs</option>
                <option value = 'alcoholijs' {% if selectedItem == alcoholIjs %} selected {% endif %}>alcohol ijs</option>
                <option value = 'ijskar' {% if selectedItem == ijskar %} selected {% endif %}>ijskar boeken</option>
            </select>
            <br>
            <br>

            <button>next</button>
